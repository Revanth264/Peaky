{
  "name": "store-peakime-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Peakime E-commerce Store",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "serve": "firebase emulators:start --only functions",
    "deploy": "npm run build && firebase deploy --only functions",
    "deploy:all": "npm run build && firebase deploy --only functions,firestore,storage,hosting",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^5.0.1",
    "razorpay": "^2.9.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.14.0"
  },
  "private": true
}


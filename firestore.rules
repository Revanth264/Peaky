rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function authed() {
      return request.auth != null;
    }
    
    function verified() {
      return !(request.auth.token.email is string) || request.auth.token.email_verified == true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if authed() && verified() && (request.auth.uid == userId || request.auth.token.role == 'admin');
      allow create: if authed() && verified() && request.auth.uid == userId;
      allow update: if authed() && verified() && request.auth.uid == userId;
      allow delete: if authed() && verified() && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    
    // Handles collection (for unique @handle registry)
    match /handles/{handle} {
      allow read: if true; // Public read for checking availability
      allow create: if authed() && verified(); // Only verified users can create
      allow update: if false; // Immutable once created
      allow delete: if false; // Immutable once created
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if true; // Public read
      allow write: if authed() && verified() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read, write: if authed() && verified() && 
        resource.data.userId == request.auth.uid;
      allow create: if authed() && verified();
    }
    
    // Cart collection (if using server-side cart)
    match /carts/{userId} {
      allow read, write: if authed() && verified() && request.auth.uid == userId;
    }
    
    // Wishlist collection (if using server-side wishlist)
    match /wishlists/{userId} {
      allow read, write: if authed() && verified() && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

